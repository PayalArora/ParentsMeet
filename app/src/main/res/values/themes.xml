<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParentsMeet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_primary</item>
        <item name="colorSecondaryVariant">@color/app_primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="colorAccent">@color/app_primary</item>
        <item name="android:statusBarColor">@color/app_theme</item>
    </style>

    <style name="BottomSheet" parent="Theme.ParentsMeet">
            <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/gray</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MatchSpinnerTheme" parent="Theme.ParentsMeet">
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>
</resources>