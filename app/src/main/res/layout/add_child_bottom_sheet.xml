<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp">

    <ImageView
        android:id="@+id/iv_kid"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_baseline_check_box_outline_blank_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:hint="name"
        android:textColor="@color/blue_1"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:hint="name"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <View
        android:id="@+id/divider_name"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/silver_8"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="Age"
        android:textColor="@color/blue_1"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintTop_toBottomOf="@+id/divider_name" />

    <EditText
        android:id="@+id/edt_years"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_years" />

    <View
        android:id="@+id/divider_age"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/silver_8"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_years" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="Gender"
        android:textColor="@color/blue_1"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintTop_toTopOf="@+id/divider_age" />

    <EditText
        android:id="@+id/edt_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_gender" />

    <View
        android:id="@+id/divider_gender"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/silver_8"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_gender" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="Grade"
        android:textColor="@color/blue_1"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintTop_toTopOf="@+id/divider_gender" />

    <EditText
        android:id="@+id/edt_grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_kid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_grade" />

</androidx.constraintlayout.widget.ConstraintLayout>

